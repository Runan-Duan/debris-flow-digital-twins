# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/debris_flow_dt
POSTGRES_USER=postgres
POSTGRES_PASSWORD=Passward
POSTGRES_DB=debris_flow_dt

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
SECRET_KEY=your-secret-key-here-change-in-production

# Data Directories
DATA_DIR=./data
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed
EXTERNAL_DATA_DIR=./data/external

# Weather API (OpenWeatherMap)
OPENWEATHER_API_KEY=your-api-key-here
WEATHER_LOCATION_LAT=46.5197
WEATHER_LOCATION_LON=6.6323
WEATHER_UPDATE_INTERVAL=1800  # seconds (30 min)

# Sentinel-2 Configuration
COPERNICUS_USERNAME=your-username-here
COPERNICUS_PASSWORD=your-password-here
SENTINEL_AOI_WKT=POLYGON((6.5 46.4, 6.7 46.4, 6.7 46.6, 6.5 46.6, 6.5 46.4))
SENTINEL_CHECK_INTERVAL=86400  # seconds (1 day)

# DEM Configuration
DEM_RESOLUTION=1.0  # meters
DEM_EPSG=32632  # UTM Zone 32N
CHANGE_DETECTION_THRESHOLD=0.5  # meters (Level of Detection)

# Flow-R Configuration
FLOWR_PATH=/path/to/flowr
FLOWR_FRICTION_ANGLE=32  # degrees
FLOWR_MIN_VELOCITY=0.1  # m/s

# Rainfall Threshold Model
# I-D threshold: I = THRESHOLD_ALPHA Ã— D^(-THRESHOLD_BETA)
THRESHOLD_ALPHA=20.0
THRESHOLD_BETA=0.5
MIN_TRIGGER_DURATION=60  # minutes

# Risk Calculation
RISK_LOW_THRESHOLD=0.3
RISK_MEDIUM_THRESHOLD=0.5
RISK_HIGH_THRESHOLD=0.7

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# CORS (for frontend)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
